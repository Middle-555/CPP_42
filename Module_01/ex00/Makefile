# Nom de l'ex√©cutable
NAME = zombie

# Compilateur
CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

# Dossiers
SRC_DIR = src
INC_DIR = include
OBJ_DIR = obj

# Fichiers sources
SRCS = $(SRC_DIR)/main.cpp \
       $(SRC_DIR)/Zombie.cpp \
       $(SRC_DIR)/newZombie.cpp \
       $(SRC_DIR)/randomChump.cpp

# G√©n√©ration des fichiers objets
OBJS = $(SRCS:$(SRC_DIR)/%.cpp=$(OBJ_DIR)/%.o)

# Commande de compilation
$(NAME): $(OBJS)
	@$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)
	@echo "‚úÖ Compilation termin√©e ! Ex√©cutable : $(NAME)"

# Compilation des fichiers objets
$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp | $(OBJ_DIR)
	@$(CXX) $(CXXFLAGS) -I$(INC_DIR) -c $< -o $@
	@echo "üõ†Ô∏è  Compilation de $<"

# Cr√©ation du dossier obj si n√©cessaire
$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

# Nettoyage des fichiers objets et de l'ex√©cutable
clean:
	@rm -rf $(OBJ_DIR)
	@echo "üßπ Fichiers objets supprim√©s."

fclean: clean
	@rm -f $(NAME)
	@echo "üóëÔ∏è  Ex√©cutable supprim√©."

# Recompilation compl√®te
re: fclean $(NAME)

# Emp√™che Make d'utiliser un fichier appel√© "clean" comme cible par d√©faut
.PHONY: clean fclean re
