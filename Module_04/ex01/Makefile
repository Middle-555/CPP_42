NAME		=	Brain

CXX		=	c++
CXXFLAGS	=	-Wall -Wextra -Werror -std=c++98

SRC_DIR		=	src
INC_DIR		=	include
OBJ_DIR		=	obj

SRCS		=	$(wildcard $(SRC_DIR)/*.cpp)
OBJS		=	$(patsubst $(SRC_DIR)/%.cpp,$(OBJ_DIR)/%.o,$(SRCS))

INCLUDES	=	-I$(INC_DIR)

HEADER		=	"üì¶ Compilation du projet $(NAME)"
LINE		=	"‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ"

# ------------------------------------------------------------------

all: $(NAME)

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

$(NAME): $(OBJ_DIR) $(OBJS)
	@echo ""
	@echo "$(LINE)"
	@echo "$(HEADER)"
	@echo "$(LINE)"
	@$(CXX) $(CXXFLAGS) $(INCLUDES) -o $@ $(OBJS)
	@echo "‚úÖ Compilation termin√©e."

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.cpp
	@echo "üõ†Ô∏è  Compilation de $<"
	@$(CXX) $(CXXFLAGS) $(INCLUDES) -c $< -o $@

clean:
	@echo "üßπ Suppression des fichiers objets et du dossier obj/..."
	@rm -rf $(OBJ_DIR)

fclean: clean
	@echo "üß® Suppression de l‚Äôex√©cutable '$(NAME)'..."
	@rm -f $(NAME)

re:
	@echo "üîÅ Recompilation compl√®te..."
	@$(MAKE) fclean
	@$(MAKE) all

run: all
	@echo "üöÄ Lancement de $(NAME)..."
	@./$(NAME)

valgrind: all
	@echo "üß† Lancement avec valgrind..."
	@valgrind --leak-check=full ./$(NAME)

help:
	@echo "üõ†Ô∏è  Liste des commandes disponibles :"
	@echo "  make         : Compile le projet"
	@echo "  make run     : Compile et ex√©cute le programme"
	@echo "  make clean   : Supprime les fichiers objets"
	@echo "  make fclean  : Supprime les fichiers objets + ex√©cutable"
	@echo "  make re      : Recompile tout"
	@echo "  make valgrind: Lance le programme avec valgrind"
	@echo "  make help    : Affiche cette aide"

.PHONY: all clean fclean re run valgrind help